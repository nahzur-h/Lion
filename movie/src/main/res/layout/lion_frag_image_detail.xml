<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/titleTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/lion_image_list_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_normal_16"
        android:layout_marginEnd="@dimen/space_normal_16"
        android:layout_marginStart="@dimen/space_normal_16"
        android:layout_marginTop="@dimen/space_large_48"
        android:ellipsize="end"
        android:letterSpacing="0.08"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/text_large_26" />

    <TextView
        android:id="@+id/bottomContentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/space_large_48"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>
